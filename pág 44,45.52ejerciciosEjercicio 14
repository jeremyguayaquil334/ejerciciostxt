#include <iostream>
using namespace std;

int main() {
    int numero;

    // Solicitar el número al usuario
    cout << "Introduce un número entero: ";
    cin >> numero;

    // Verificar si el número es par
    if (numero % 2 == 0) {
        cout << numero << " es un número par." << endl;
    } else {
        cout << numero << " es un número impar." << endl;
    }

    // Verificar si el número es divisible entre 5
    if (numero % 5 == 0) {
        cout << numero << " es divisible entre 5." << endl;
    } else {
        cout << numero << " no es divisible entre 5." << endl;
    }

    return 0;
}
# Solicitar el número al usuario
numero = int(input("Introduce un número entero: "))

# Verificar si el número es par
if numero % 2 == 0:
    print(f"{numero} es un número par.")
else:
    print(f"{numero} es un número impar.")

# Verificar si el número es divisible entre 5
if numero % 5 == 0:
    print(f"{numero} es divisible entre 5.")
else:
    print(f"{numero} no es divisible entre 5.")
