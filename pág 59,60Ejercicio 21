import java.util.Scanner;

public class AnalizadorNumeros {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int contador = 0;
        int sumaImpares = 0;
        int cantidadImpares = 0;
        int mayorPar = Integer.MIN_VALUE;

        while (true) {
            System.out.print("Introduce un número (negativo para finalizar): ");
            int numero = scanner.nextInt();

            if (numero < 0) {
                break;
            }

            contador++;

            if (numero % 2 != 0) {
                sumaImpares += numero;
                cantidadImpares++;
            } else {
                if (numero > mayorPar) {
                    mayorPar = numero;
                }
            }
        }

        if (contador > 0) {
            System.out.println("Cantidad de números introducidos: " + contador);

            if (cantidadImpares > 0) {
                double mediaImpares = (double) sumaImpares / cantidadImpares;
                System.out.println("Media de los números impares: " + mediaImpares);
            } else {
                System.out.println("No se introdujeron números impares.");
            }

            if (mayorPar != Integer.MIN_VALUE) {
                System.out.println("Mayor de los números pares: " + mayorPar);
            } else {
                System.out.println("No se introdujeron númer
Introduce un número (negativo para finalizar): 3
Introduce un número (negativo para finalizar): 4
Introduce un número (negativo para finalizar): 7
Introduce un número (negativo para finalizar): -1
Cantidad de números introducidos: 3
Media de los números impares: 5.0
Mayor de los números pares: 4
